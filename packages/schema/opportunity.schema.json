{
  "$id": "https://example.org/opportunity.schema.json",
  "type": "object",
  "required": ["id","source","source_uid","title","summary","status","links"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "source": { "type": "string", "minLength": 1 },
    "source_uid": { "type": "string", "minLength": 1 },
    "title": {
      "type": "object",
      "properties": {
        "sv": { "type": ["string","null"] },
        "en": { "type": ["string","null"] }
      },
      "additionalProperties": false
    },
    "summary": {
      "type": "object",
      "properties": {
        "sv": { "type": ["string","null"] },
        "en": { "type": ["string","null"] }
      },
      "additionalProperties": false
    },
    "programme": { "type": ["string","null"] },
    "sponsor": { "type": ["string","null"] },
    "topic_codes": { "type": "array", "items": { "type": "string" } },
    "tags": { "type": "array", "items": { "type": "string" } },
    "deadlines": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type","date"],
        "properties": {
          "type": { "type": "string" },
          "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" }
        },
        "additionalProperties": true
      }
    },
    "opens_at": { "type": ["string","null"], "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "closes_at": { "type": ["string","null"], "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "status": { "type": "string", "enum": ["open","planned","closed"] },
    "links": {
      "type": "object",
      "properties": {
        "landing": { "type": "string" },
        "guidelines": { "type": ["string","null"] },
        "application_portal": { "type": ["string","null"] }
      },
      "additionalProperties": true
    },
    "geography": { "type": ["object","null"] },
    "language_available": {
      "type": "array",
      "items": { "type": "string", "enum": ["sv","en"] }
    }
  },
  "additionalProperties": true
}
